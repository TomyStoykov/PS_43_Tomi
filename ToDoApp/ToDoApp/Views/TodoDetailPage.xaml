<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TodoApp.Views.TodoDetailPage">
    <StackLayout Padding="10">
        <Label Text="Детайли за задачите" FontSize="Large" HorizontalOptions="Center"/>
        <!-- Пример за показване на броя на задачите -->
        <Label Text="{Binding TodoItems.Count, StringFormat='Общо задачи: {0}'}" FontSize="Medium"/>
        <ListView ItemsSource="{Binding TodoItems}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Title}" Detail="{Binding IsCompleted, StringFormat='Завършено: {0}'}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
